<script>
    var slideIndex = 1;
showSlides(slideIndex);

// switching slides
function plusSlides(n) {
  showSlides(slideIndex += n);
}

function currentSlide(n) {
  showSlides(slideIndex = n);
}

function showSlides(n) {
  var i;
  var slides = document.getElementsByClassName("mySlides");
  var setInfo = document.getElementsById("information")
  var infoSlide = [
                    "A snake game created in Java with JavaFX. Displays knowledge of OOP principles and working with ActionEvents.",
